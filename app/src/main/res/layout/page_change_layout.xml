<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_change_web_search_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="@dimen/search_list_horizontal_margin"
    android:layout_marginRight="@dimen/search_list_horizontal_margin"
    android:layout_marginTop="@dimen/search_list_horizontal_margin"
    android:visibility="invisible"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/prev_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/next_page_view_height"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/search_list_horizontal_margin"
            android:layout_marginTop="@dimen/search_list_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/next_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/next_page_view_height"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/search_list_horizontal_margin"
            android:layout_marginTop="@dimen/search_list_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/black" />

    </RelativeLayout>
</android.support.v7.widget.CardView>